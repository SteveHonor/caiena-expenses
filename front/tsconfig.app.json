{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // A baseURL Ã© a raiz do projeto
    "paths": {
      "@/*": ["src/*"] // Alias '@' apontando para a pasta 'src'
    }
  },
  "include": ["src/**/*"]
}
